  <body class="flex flex-col min-h-[100%] min-w-[100%]">
    <header
      class="display-flex justify-space-between align-center p-2 bg-base-300"
    >
      <div class="navbar bg-base-300">
        <div class="flex-1 bg-base-300">
          <a href="/" class="btn btn-ghost text-xl">Cryptid Spotter</a>
        </div>
        <div class="flex-none">
          {{#if profile}}
            <strong class="pe-3">{{profile.username}}</strong>
          {{/if}}
          <div class="dropdown dropdown-end">
            <div
              tabindex="0"
              role="button"
              class="btn btn-ghost btn-circle avatar"
            >
             
              <div class="w-10 rounded-full">
               
                <img
                  alt="Spotter Avatar"
                  {{#if profile}}
                      src="{{profile.avatar}}"
                  {{else}}
                    src= "/images/avatars/default.png"
                  {{/if}}
                  
                />
                {{! User Avatar Image ^^ }}
              </div>

            </div>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
            {{#if logged_in}}
            <li><a class="justify-between" href="/cryptid-library">Library</a></li>
            <li>
              <a href="/profile" class="justify-between">
                Profile
              </a>
            </li>
            <li>
              <a href="/profile/settings" class="justify-between">
                Settings
              </a>
            </li>
            <li>
              <a class="jusitfy-between" id="Logout">logout</a>
            </li>
            {{/if}}
            {{#unless logged_in}}
            <li><a href="/cryptid-library">Library</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
            {{/unless}}
          </ul>
        </div>
      </div>
    </div>
  </header>
  <main class="flex justify-center mt-5 grow min-w-full mx-auto">
    {{{body}}}
  </main>
  
  <footer class="footer footer-center p-4 bg-base-300 text-base-content mt-10">
